# ============================================================================
# SEPOLIA TESTNET CONFIGURATION
# ============================================================================

# Sepolia RPC URLs (comma-separated for failover)
# Recommended: Use multiple providers for redundancy
SEPOLIA_RPC_URLS=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY,https://sepolia.infura.io/v3/YOUR_INFURA_KEY,https://rpc.sepolia.org

# Chain ID for Sepolia
CHAIN_ID=11155111

# Start from latest block to avoid historical data costs
START_BLOCK=latest

# Conservative settings for testnet to preserve API quotas
IS_TESTNET=true
MAX_SYNC_BATCH=5
RPC_RATE_LIMIT=1
FETCH_CONCURRENCY=2

# Database configuration for Sepolia indexer
DATABASE_URL=postgres://postgres:W3b3_Idx_Secur3_2026_Sec@sepolia-db:5432/web3_sepolia?sslmode=disable

# Logging
LOG_LEVEL=info

# ============================================================================
# ADVANCED TESTNET SETTINGS
# ============================================================================

# Maximum number of blocks to sync in a single batch (prevents quota burn)
MAX_SYNC_BATCH=5

# Time to wait after reaching sync batch limit (seconds)
SYNC_BATCH_WAIT_TIME=5

# Conservative RPC timeout for testnet stability
RPC_TIMEOUT_SECONDS=15

# Number of concurrent fetch workers (lower for testnet)
FETCH_CONCURRENCY=2

# Size of fetch batches (smaller for testnet)
FETCH_BATCH_SIZE=50

# Retry queue size for failed requests
RETRY_QUEUE_SIZE=100

# ============================================================================
# COST OPTIMIZATION SETTINGS
# ============================================================================

# Disable demo mode for testnet (we want real data)
DEMO_MODE=false

# Conservative checkpoint batch size
CHECKPOINT_BATCH=50

# Gas settings (not typically used for indexing but included for completeness)
MAX_GAS_PRICE=50
GAS_SAFETY_MARGIN=10ENABLE_ENERGY_SAVING=false
